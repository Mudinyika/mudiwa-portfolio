---
import Base from '@/templates/Base.astro';
import { Section } from 'astro-boilerplate-components';

const title = 'Contact';
const description = 'Get in touch with Mudiwa Nyikavaranda.';
---

<Base head={{ title, description }}>
  <Section>
    <h1 class="text-4xl font-bold mb-6">Let’s Connect</h1>
    <p class="mb-8 text-lg max-w-xl">
      I’m always open to discussing new opportunities, collaborations, or just talking about tech. 
      Feel free to reach out — whether it’s about a project, an idea, or just saying hello.
    </p>

    <div class="flex flex-col md:flex-row gap-8 items-start md:items-center">
      <a href="mailto:mudiwanyikavaranda@gmail.com" class="flex items-center gap-3 hover:scale-105 transition">
        <img src="/assets/images/gmail.png" alt="Email" class="w-10 h-10" />
        <span class="text-lg text-blue-500">mudiwanyikavaranda@gmail.com</span>
      </a>

      <a href="https://www.linkedin.com/in/mudiwa-nyikavaranda/" target="_blank" class="flex items-center gap-3 hover:scale-105 transition">
        <img src="/assets/images/linkedin-icon.png" alt="LinkedIn" class="w-10 h-10" />
        <span class="text-lg text-blue-500">LinkedIn</span>
      </a>

      <a href="https://github.com/Mudinyika" target="_blank" class="flex items-center gap-3 hover:scale-105 transition">
        <img src="/assets/images/github-cat.png" alt="GitHub" class="w-10 h-10" />
        <span class="text-lg text-gray-300">GitHub</span>
      </a>

      <a href="https://wa.me/263719426867" target="_blank" class="flex items-center gap-3 hover:scale-105 transition">
        <img src="/assets/images/green.png" alt="WhatsApp" class="w-10 h-10" />
        <span class="text-lg text-green-500">WhatsApp</span>
      </a>
    </div>

    <p class="mt-12 text-sm text-gray-400 max-w-md">
      I usually respond within 24 hours. Looking forward to connecting with you!
    </p>
  </Section>
</Base>
