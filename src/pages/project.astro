---
import Base from '@/templates/Base.astro';
import { Section } from 'astro-boilerplate-components';

const title = "Zimora - Rewards Platform";
const description = "Digital rewards platform — Admin, Till, and Customer applications.";
---

<Base head={{ title, description }}>
  <Section>
    <h1 class="text-4xl font-bold mb-4">Zimora</h1>
    <p class="mb-8 text-lg">
      A multi-application rewards platform for customers, merchants, and administrators — 
      designed for instant point earning and redemption, secure transactions, and intuitive UX.
    </p>

    <!-- Admin Screens -->
    <h2 class="text-2xl font-semibold mb-4">Admin Interface</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <img src="/images/admin-dashboard.png" alt="Admin Dashboard" class="rounded shadow" />
      <img src="/images/admin-reports.png" alt="Admin Reports" class="rounded shadow" />
    </div>

    <!-- Till Screens -->
    <h2 class="text-2xl font-semibold mb-4">Till Application</h2>
    <div class="grid grid-cols-2 gap-6 mb-8">
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Operator Logs In</h3>
        <img src="/assets/images/till_login.JPG" alt="Till Login" class="rounded shadow max-w-[200px]"/>    
      </div>
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Admin Approves</h3>
        <img src="/assets/images/manager_approval.JPG" alt="Till Manager Approval" class="rounded shadow max-w-[200px]"/>
      </div>
    </div>
    
    <div class="grid grid-cols-2 gap-6 mb-8">
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Operator Adds Points</h3>    
        <img src="/assets/images/add_points.JPG" alt="Till Allocate Points" class="rounded shadow max-w-[300px]"/>
      </div>
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Operator Confirms Transaction</h3>    
        <img src="/assets/images/approve_points.JPG" alt="Till Points Input" class="rounded shadow max-w-[300px]"/> 
      </div>
    </div>  


    <!-- Customer App Screens -->
    <h2 class="text-2xl font-semibold mb-4">Customer Mobile App</h2>

    <!-- First grid: Home Screen & View History -->
    <div class="grid grid-cols-2 gap-6 mb-8">
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Home Screen</h3>
        <img src="/assets/images/home_screen.png" alt="Customer Home" class="rounded shadow max-w-[250px]" />
      </div>
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">View History</h3>
        <img src="/assets/images/history.png" alt="Customer History" class="rounded shadow max-w-[250px]" />
      </div>
    </div>

    <!-- Second grid: Refund Info & Refund Modal -->
    <div class="grid grid-cols-2 gap-6 mb-8">
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Info on Refund</h3>
        <img src="/assets/images/request_info.png" alt="Refund Info" class="rounded shadow max-w-[250px]" />
      </div>
      <div class="flex flex-col items-center">
        <h3 class="text-lg font-medium mb-2">Refund Modal</h3>
        <img src="/assets/images/confirm_request.png" alt="Refund Modal" class="rounded shadow max-w-[250px]" />
      </div>
    </div>

    <!-- Tech Stack -->
    <h2 class="text-2xl font-semibold mb-4">Tech Stack</h2>

    <div class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 mb-8 text-center">
      <!-- Languages -->
      <div class="flex flex-col items-center">
        <img src="/assets/images/python.svg" alt="Python" class="w-12 h-12 mb-1"/>
        <span class="text-sm">Python</span>
      </div>
      <div class="flex flex-col items-center">
        <img src="/assets/images/typescript.svg" alt="TypeScript" class="w-12 h-12 mb-1"/>
        <span class="text-sm">TypeScript</span>
      </div>
      <div class="flex flex-col items-center">
        <img src="/assets/images/dart.svg" alt="Dart" class="w-15 h-14 mb-1"/>
        <span class="text-sm">Dart</span>
      </div>

      <!-- Frameworks / Backend -->
      <div class="flex flex-col items-center">
        <img src="/assets/images/flask.svg" alt="Flask" class="w-12 h-12 mb-1"/>
        <span class="text-sm">Flask</span>
      </div>
      <div class="flex flex-col items-center">
        <img src="/assets/images/fastapi.svg" alt="FastAPI" class="w-12 h-12 mb-1"/>
        <span class="text-sm">FastAPI</span>
      </div>
      <div class="flex flex-col items-center">
        <img src="/assets/images/jinja2.svg" alt="Jinja2" class="w-13 h-12 mb-1"/>
        <span class="text-sm">Jinja2</span>
      </div>

      <!-- Database -->
      <div class="flex flex-col items-center">
        <img src="/assets/images/elephant.png" alt="PostgreSQL" class="w-12 h-12 mb-1"/>
        <span class="text-sm">PostgreSQL</span>
      </div>

      <!-- Frontend / Mobile -->
      <div class="flex flex-col items-center">
        <img src="/assets/images/flutter.svg" alt="Flutter" class="w-17 h-17 mb-1"/>
        <span class="text-sm">Flutter</span>
      </div>

      <!-- Infrastructure / Server -->
      <div class="flex flex-col items-center">
        <img src="/assets/images/nginx.svg" alt="Nginx" class="w-12 h-12 mb-1"/>
        <span class="text-sm">Nginx</span>
      </div>
    </div>


    <!-- Architecture Diagram -->
    <h2 class="text-2xl font-semibold mb-4">System Architecture</h2>
    <img src="/images/zimora-architecture.png" alt="Zimora System Architecture" class="rounded shadow mb-8" />

    <!-- Business Impact -->
    <h2 class="text-2xl font-semibold mb-4">Business Impact</h2>
    <p>
      Handles 5,000+ daily transactions. Reduced redemption time from 2 minutes to under 5 seconds. 
      Increased partner store engagement by 30% within the first quarter.
    </p>
  </Section>
</Base>
